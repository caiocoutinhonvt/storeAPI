{
  "compilerOptions": {
    "target": "es2021",                                
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                  
    "module": "commonjs",                                             
    "moduleResolution": "node",                         
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                               
    "useUnknownInCatchVariables": false,      
    "skipLibCheck": true,                                 
  }
}
